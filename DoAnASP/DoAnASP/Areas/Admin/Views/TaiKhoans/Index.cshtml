@model IEnumerable<DoAnASP.Areas.Admin.Models.TaiKhoan>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" asp-controller="TaiKhoans">Create New</a>

</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HinhAnh)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Ten)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>


            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/Admin/avatar" style="width:50px;height:50px" />
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>


                <td>
                    <a asp-action="Edit" asp-route-id="@item.IDTK">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.IDTK">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.IDTK">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
